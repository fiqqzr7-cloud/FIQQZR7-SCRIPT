-- Toggle premium
local function createToggle(y, text, icon, key)
    local row = Instance.new("Frame")
    row.Size = UDim2.new(1, -20, 0, 32)
    row.Position = UDim2.new(0, 10, 0, y)
    row.BackgroundTransparency = 1
    row.Parent = optionsCard
    
    local toggleBg = Instance.new("Frame")
    toggleBg.Size = UDim2.new(0, 44, 0, 22)
    toggleBg.Position = UDim2.new(0, 0, 0.5, -11)
    toggleBg.BackgroundColor3 = hideOptions[key] and Color3.fromRGB(0, 150, 255) or Color3.fromRGB(40, 45, 60)
    toggleBg.BorderColor3 = hideOptions[key] and Color3.fromRGB(0, 200, 255) or Color3.fromRGB(0, 150, 255)
    toggleBg.BorderSizePixel = 1
    toggleBg.Parent = row
    
    local toggleBgCorner = Instance.new("UICorner")
    toggleBgCorner.CornerRadius = UDim.new(0, 11)
    toggleBgCorner.Parent = toggleBg
    
    local toggleIndicator = Instance.new("Frame")
    toggleIndicator.Size = UDim2.new(0, 18, 0, 18)
    toggleIndicator.Position = hideOptions[key] and UDim2.new(1, -20, 0.5, -9) or UDim2.new(0, 2, 0.5, -9)
    toggleIndicator.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    toggleIndicator.BorderSizePixel = 0
    toggleIndicator.Parent = toggleBg
    
    local toggleIndicatorCorner = Instance.new("UICorner")
    toggleIndicatorCorner.CornerRadius = UDim.new(0, 9)
    toggleIndicatorCorner.Parent = toggleIndicator
    
    local iconLabel = Instance.new("TextLabel")
    iconLabel.Size = UDim2.new(0, 24, 0, 24)
    iconLabel.Position = UDim2.new(0, 50, 0.5, -12)
    iconLabel.BackgroundTransparency = 1
    iconLabel.Text = icon
    iconLabel.TextColor3 = Color3.fromRGB(0, 200, 255)
    iconLabel.TextSize = 16
    iconLabel.Font = Enum.Font.GothamBold
    iconLabel.Parent = row
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -80, 1, 0)
    label.Position = UDim2.new(0, 80, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = text
    label.TextColor3 = Color3.fromRGB(220, 220, 240)
    label.TextSize = 13
    label.Font = Enum.Font.Gotham
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = row
    
    local clickBtn = Instance.new("TextButton")
    clickBtn.Size = UDim2.new(1, 0, 1, 0)
    clickBtn.BackgroundTransparency = 1
    clickBtn.Text = ""
    clickBtn.Parent = row
    
    clickBtn.MouseButton1Click:Connect(function()
        hideOptions[key] = not hideOptions[key]
        
        if hideOptions[key] then
            toggleBg.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
            toggleBg.BorderColor3 = Color3.fromRGB(0, 200, 255)
            toggleIndicator.Position = UDim2.new(1, -20, 0.5, -9)
        else
            toggleBg.BackgroundColor3 = Color3.fromRGB(40, 45, 60)
            toggleBg.BorderColor3 = Color3.fromRGB(0, 150, 255)
            toggleIndicator.Position = UDim2.new(0, 2, 0.5, -9)
        end
        
        if boostActive then
            applyBoost(true)
        end
    end)
end

