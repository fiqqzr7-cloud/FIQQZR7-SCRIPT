-- ==============================================
-- BUTTON FUNCTIONS
-- ==============================================
boostBtn.MouseButton1Click:Connect(function()
    boostActive = not boostActive
    applyBoost(boostActive)
end)

resetBtn.MouseButton1Click:Connect(function()
    -- Reset semua opsi ke false
    for key, _ in pairs(hideOptions) do
        hideOptions[key] = false
    end
    
    -- Matikan boost jika aktif
    if boostActive then
        applyBoost(false)
    end
    
    -- Update UI reset
    boostActive = false
    updateUI()
    
    -- Update semua toggle visuals
    for _, child in ipairs(optionsCard:GetChildren()) do
        if child:IsA("Frame") then
            local toggleBg = child:FindFirstChildOfClass("Frame")
            if toggleBg and toggleBg ~= resetCard and toggleBg ~= statsCard and toggleBg ~= boostCard then
                toggleBg.BackgroundColor3 = Color3.fromRGB(40, 45, 60)
                toggleBg.BorderColor3 = Color3.fromRGB(0, 150, 255)
                local indicator = toggleBg:FindFirstChildOfClass("Frame")
                if indicator then
                    indicator.Position = UDim2.new(0, 2, 0.5, -9)
                end
            end
        end
    end
end)

-- Minimize function
minimizeBtn.MouseButton1Click:Connect(function()
    uiVisible = not uiVisible
    
    if uiVisible then
        TweenService:Create(container, TweenInfo.new(0.4, Enum.EasingStyle.Quad), {
            Size = UDim2.new(0, 360, 0, 550)
        }):Play()
        task.wait(0.1)
        contentContainer.Visible = true
        minimizeBtn.Text = "‚àí"
        minimizeBtn.TextColor3 = Color3.fromRGB(0, 255, 200)
    else
        contentContainer.Visible = false
        TweenService:Create(container, TweenInfo.new(0.4, Enum.EasingStyle.Quad), {
            Size = UDim2.new(0, 360, 0, 70)
        }):Play()
        minimizeBtn.Text = "+"
        minimizeBtn.TextColor3 = Color3.fromRGB(255, 200, 0)
    end
end)

-- Insert key toggle
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.Insert then
        container.Visible = not container.Visible
    end
end)

