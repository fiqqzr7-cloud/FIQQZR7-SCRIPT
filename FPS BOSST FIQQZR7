-- FIQQZR7 FPS BOOST - MODERN HUB ULTIMATE V3
-- Smooth UI, boleh close, toggle ON/OFF, hide player

local player = game.Players.LocalPlayer
local Lighting = game:GetService("Lighting")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

repeat task.wait() until player and player:FindFirstChild("PlayerGui")

-- ==============================================
-- VARIABLES
-- ==============================================
local boostActive = false
local fps = 0
local ping = "0ms"
local frameCount = 0
local lastTime = tick()
local hiddenObjects = {}
local uiVisible = true

-- Simpan pengaturan asli
local originalSettings = {
    GlobalShadows = Lighting.GlobalShadows,
    FogEnd = Lighting.FogEnd,
    Brightness = Lighting.Brightness
}

-- Status hide options (9 pilihan)
local hideOptions = {
    Shadows = false,
    Fog = false,
    Trees = false,
    Water = false,
    Particles = false,
    Grass = false,
    Decals = false,
    Clouds = false,
    OtherPlayers = false
}

-- ==============================================
-- FUNGSI HIDE PLAYER
-- ==============================================
local function hideOtherPlayers(hide)
    for _, plr in ipairs(Players:GetPlayers()) do
        if plr ~= player and plr.Character then
            for _, part in ipairs(plr.Character:GetDescendants()) do
                if part:IsA("BasePart") then
                    if hide then
                        table.insert(hiddenObjects, part)
                        part.Transparency = 1
                    else
                        part.Transparency = 0
                    end
                end
                if part:IsA("Accessory") and part:FindFirstChild("Handle") then
                    if hide then
                        table.insert(hiddenObjects, part.Handle)
                        part.Handle.Transparency = 1
                    else
                        part.Handle.Transparency = 0
                    end
                end
            end
        end
    end
end

-- ==============================================
-- FUNGSI FPS BOOST
-- ==============================================
local function clearHidden()
    for _, obj in ipairs(hiddenObjects) do
        if obj and obj.Parent then
            if obj:IsA("BasePart") then
                obj.Transparency = 0
            elseif obj:IsA("ParticleEmitter") or obj:IsA("Smoke") or obj:IsA("Fire") or obj:IsA("Sparkles") then
                obj.Enabled = true
            elseif obj:IsA("Grass") then
                obj.Enabled = true
            elseif obj:IsA("Decal") or obj:IsA("Texture") then
                obj.Transparency = 0
            end
        end
    end
    hiddenObjects = {}
end

local function applyBoost(enable)
    if enable then
        -- Bersihkan dulu
        clearHidden()
        
        -- Terapkan pengaturan
        if hideOptions.Shadows then
            Lighting.GlobalShadows = false
        end
        
        if hideOptions.Fog then
            Lighting.FogEnd = 9e9
        end
        
        if hideOptions.Clouds then
            Lighting.Clouds = nil
        end
        
        -- Loop semua objek
        for _, obj in ipairs(workspace:GetDescendants()) do
            -- Sembunyikan partikel
            if hideOptions.Particles and (obj:IsA("ParticleEmitter") or obj:IsA("Smoke") or obj:IsA("Fire") or obj:IsA("Sparkles")) then
                table.insert(hiddenObjects, obj)
                obj.Enabled = false
            end
            
            -- Sembunyikan rumput
            if hideOptions.Grass and obj:IsA("Grass") then
                table.insert(hiddenObjects, obj)
                obj.Enabled = false
            end
            
            -- Sembunyikan decals
            if hideOptions.Decals and (obj:IsA("Decal") or obj:IsA("Texture")) then
                table.insert(hiddenObjects, obj)
                obj.Transparency = 1
            end
            
            if obj:IsA("BasePart") then
                -- Sembunyikan pohon
                if hideOptions.Trees then
                    local name = obj.Name:lower()
                    if name:find("tree") or name:find("bush") or name:find("leaf") or name:find("plant") then
                        table.insert(hiddenObjects, obj)
                        obj.Transparency = 1
                    end
                end
                -- Sembunyikan air
                if hideOptions.Water and obj.Material == Enum.Material.Water then
                    table.insert(hiddenObjects, obj)
                    obj.Transparency = 1
                end
            end
        end
        
        -- Sembunyikan pemain lain
        if hideOptions.OtherPlayers then
            hideOtherPlayers(true)
        end
        
        boostActive = true
    else
        -- Kembalikan semua
        Lighting.GlobalShadows = originalSettings.GlobalShadows
        Lighting.FogEnd = originalSettings.FogEnd
        Lighting.Brightness = originalSettings.Brightness
        Lighting.Clouds = Instance.new("Clouds")
        
        clearHidden()
        hideOtherPlayers(false)
        boostActive = false
    end
    
    -- Update UI
    updateUI()
end

-- ==============================================
-- FUNGSI UPDATE UI
-- ==============================================
local function updateUI()
    if boostActive then
        boostBtn.Text = "ON"
        boostBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
        statusIndicator.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    else
        boostBtn.Text = "OFF"
        boostBtn.BackgroundColor3 = Color3.fromRGB(150, 50, 50)
        statusIndicator.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    end
end

-- ==============================================
-- FUNGSI MONITOR
-- ==============================================
RunService.RenderStepped:Connect(function()
    frameCount = frameCount + 1
    local currentTime = tick()
    if currentTime - lastTime >= 1 then
        fps = frameCount
        frameCount = 0
        lastTime = currentTime
        
        -- Dapatkan ping
        local success = pcall(function()
            ping = game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValueString()
        end)
        
        if fpsValue and pingValue then
            fpsValue.Text = fps .. " FPS"
            pingValue.Text = ping
        end
    end
end)

